<%- include("header"); -%>

<body>
        <div>
            <div>
                <h3><%= date %> </h3>
                <h1><i class="fas fa-map-marker-alt location"></i><%= city %>,<span class="countryName"><%= country %></span></h1>
            </div>
            <div class="container topbox">
                <div class="row">
                    <div class="col-12 col-sm-6 column">
                        <img class="icon" src="./images/weather icons/<%= weatherData[0].weather[0].icon %>.svg"  alt="weather icon">
                        <p class="climate"><%= weatherData[0].weather[0].main %>, <span><%= weatherData[0].weather[0].description %></span></p>
                    </div>
                    <div class="col-12 col-sm-6">
                        <p class="temperature"><%= weatherData[0].main.temp %>째c</p>
                        <p class="minmax"><i class="fas fa-temperature-low tempicon"></i><%= weatherData[0].main.temp_min %>째c - <%= weatherData[0].main.temp_max %>째c</p>
                    </div>
                </div>
            </div>
            <div class="container topbox">
                <div class="property row">
                    <div class="col">
                        <p><i class='fas fa-wind windspeed'></i>wind speed <span class="extras"><%= weatherData[0].wind.speed %> m/s</span></p>
                    </div>
                    <div class="col">
                        <p><img class="humidity" src="./images/weather icons/wi-humidity.svg" alt="">Humidity  <span class="extras"><%= weatherData[0].main.humidity %> %</span></p>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="week">
                <div class="flexbox">
                    <% for( let i = 3; i < 16; i += 4) { %>
                    
                        <div class="box">
                            <div>
                                <h4 class="day"><%= new Date(weatherData[i].dt_txt).toDateString().split(' ')[0] %></h4>
                                <p><%= new Date(weatherData[i].dt * 1000).toLocaleTimeString("en-US").replace(":00", "") %> </p>
                            </div>
                            <div>
                                <img class="icon1" src="./images/weather icons/<%= weatherData[i].weather[0].icon %>.svg"  alt="weather icon">
                                <p class="box-temp"><%= weatherData[i].main.temp %> 째c</p>
                            </div>
                        </div>

                    <% } %>

                </div>
            </div>
        </div>
    

<%- include("footer"); -%>